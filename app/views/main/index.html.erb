<h1>居酒屋ファインダー</h1>

<body>

<li>現在地を取得</li>

<!-- 地名入力用のinputを追加 -->
<input id="address" value="川崎駅">
<!-- buttonをクリックしたらcodeAddressを実行　-->
<input type="button" value="検索" onclick="codeAddress()">
<div id='map'>
</div>

<style>
#map{
  height: 400px;
}
</style>

<script>
/*
mapを関数の外で定義(codeAddressでも使うため)
geocoderを用意
*/


let map
let geocoder

function initMap(){
  // geocoderを初期化
  geocoder = new google.maps.Geocoder()

  map = new google.maps.Map(document.getElementById('map'), {
  center: {lat: 35.531328, lng: 139.696899},
  zoom: 15
  });
  var marker = new google.maps.Marker({
          map: map,
          position: {lat: 35.531328, lng: 139.696899}
      });
}

function codeAddress(){ 
  // 入力を取得
  let inputAddress = document.getElementById('address').value;

  // geocodingしたあとmapを移動
  geocoder.geocode( { 'address': inputAddress}, function(results, status) {
    if (status == 'OK') {
　　　　　　　　　　　　// map.setCenterで地図が移動
      map.setCenter(results[0].geometry.location);




　　　　　　　　　　　　// google.maps.MarkerでGoogleMap上の指定位置にマーカが立つ
      var marker = new google.maps.Marker({
          map: map,
          position: results[0].geometry.location
      });
      display1.textContent = results[0].geometry.location.lat();
      display2.textContent = results[0].geometry.location.lng();
      let lat = display1.textContent;
      let lng = display2.textContent;
      
    } else {
      alert('Geocode was not successful for the following reason: ' + status);
    }
  });
}

</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCnwFUnTZdkOp_gqWW9ohMtNeITpSQ3aRE&callback=initMap" async defer></script>




<%= form_with url: update_path do |f| %>

<li>最寄りの駅</li>
<%=f.select :address,[["川崎","川崎"],["鶴見","鶴見"],["綱島","綱島"],["蒲田","蒲田"]]%>
<br><br>
<li>お店までの距離</li>
<%=f.select :range,[["300m","1"],["500m","2"],["1000m","3"],["2000m","4"],["3000m","5"]]%>
<br><br>
<li>金額の目安</li>
<%=f.select :bubget,[["1000~2000円","2000"],["2000~3000円","3000"],["3000~4000円","4000"],["4000~5000円","5000"],["5000円以上","10000"]]%>
<br><br>
<li>喫煙</li>
<%=f.select :smoking,[["禁煙","0"],["喫煙","1"]]%>
<br><br>

<%=f.submit "検索"%>
<%end%>

